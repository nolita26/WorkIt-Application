<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollParent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="#FB9101">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/menuTV"
                android:layout_margin="15dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Menu"
                android:textStyle="bold"
                android:textSize="35sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColor="@color/white"/>
            <androidx.appcompat.widget.AppCompatButton
                android:background="@android:color/transparent"
                android:id="@+id/homeTV"
                android:layout_margin="25dp"
                app:layout_constraintTop_toBottomOf="@+id/menuTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textStyle="bold"
                android:textSize="25sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColor="@color/white"/>
            <androidx.appcompat.widget.AppCompatButton
                android:onClick="onClick"
                android:background="@android:color/transparent"
                android:id="@+id/mapsTV"
                android:layout_margin="25dp"
                app:layout_constraintTop_toBottomOf="@+id/homeTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Maps"
                android:textStyle="bold"
                android:textSize="25sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColor="@color/white"/>
            <androidx.appcompat.widget.AppCompatButton
                android:background="@android:color/transparent"
                android:id="@+id/workoutTV"
                android:onClick="onClick"
                android:layout_margin="25dp"
                app:layout_constraintTop_toBottomOf="@+id/mapsTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Workout"
                android:textStyle="bold"
                android:textSize="25sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColor="@color/white"/>
            <androidx.appcompat.widget.AppCompatButton
                android:background="@android:color/transparent"
                android:onClick="onClick"
                android:id="@+id/dietTV"
                android:layout_margin="25dp"
                app:layout_constraintTop_toBottomOf="@+id/workoutTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Diet"
                android:textStyle="bold"
                android:textSize="25sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColor="@color/white"/>
            <androidx.appcompat.widget.AppCompatButton
                android:background="@android:color/transparent"
                android:id="@+id/profileTv"
                android:onClick="onClick"
                android:layout_margin="25dp"
                app:layout_constraintTop_toBottomOf="@+id/dietTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textStyle="bold"
                android:textSize="25sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColor="@color/white"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/AchievementTV"
                android:background="@android:color/transparent"
                android:layout_margin="25dp"
                app:layout_constraintTop_toBottomOf="@+id/profileTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Achievements"
                android:textStyle="bold"
                android:textSize="25sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColor="@color/white"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/SearchTV"
                android:layout_margin="25dp"
                android:background="@android:color/transparent"
                app:layout_constraintTop_toBottomOf="@+id/AchievementTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search"
                android:textStyle="bold"
                android:textSize="25sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColor="@color/white"/>
        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>
    <ImageView
        android:visibility="gone"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_close"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>